# Forked from Alpine for systemd support

pkgname=wireplumber
_pkgver=0.5.11
pkgver=999$_pkgver
pkgrel=2
pkgdesc="Session / policy manager implementation for PipeWire"
url="https://pipewire.org/"
# armhf: pmb#2618
arch="all !armhf"
license="LGPL-2.1-or-later"
depends_dev="
	systemd-dev
	glib-dev
	lua5.4-dev
	pipewire-dev>=0.3.39
	"
makedepends="$depends_dev
	doxygen
	gobject-introspection-dev
	graphviz
	meson
	py3-lxml
	"
checkdepends="
	dbus
	pipewire
	"
subpackages="
	$pkgname-dbg
	$pkgname-libs
	$pkgname-dev
	$pkgname-lang
	$pkgname-zsh-completion
	$pkgname-doc
	$pkgname-systemd
	"
source="https://gitlab.freedesktop.org/PipeWire/wireplumber/-/archive/$_pkgver/wireplumber-$_pkgver.tar.gz"

provides="pipewire-session-manager"
provider_priority=50
builddir="$srcdir/$pkgname-$_pkgver"

case "$CARCH" in
s390x)
	# probably broken here, but we want this just so pipewire is installable
	options="$options !check"
	;;
armv7|armhf)
	# Tests fail in BPO, probably related to QEMU since they seem to pass
	# for the pipewire package in Alpine for these arches.
	options="$options !check"
	;;
esac

build() {
	abuild-meson \
		-Db_lto=true \
		-Dintrospection=enabled \
		-Dsystem-lua=true \
		-Dsystemd=enabled \
		-Dsystemd-user-service=true\
		-Dtests="$(want_check && echo true || echo false)" \
		. output
	meson compile -C output
}

check() {
	meson test -t 10 --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
cfdfae956355c77ddce705947086db5c102dece7d456f25033c36b468e949b61c3552f058758fa52521ee07e3f7e76a34e9fc48b0058f7c524d2035883b6529b  wireplumber-0.5.11.tar.gz
"
